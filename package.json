{
  "name": "demo-angular-material-rxdb",
  "version": "0.0.0",
  "author": {
    "name": "Dominik Hladík",
    "email": "dominik.hladik@seznam.cz",
    "url": "https://github.com/Celtian"
  },
  "license": "MIT",
  "private": true,
  "description": "Demo of angular & rxdb",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint && yarn lint:styles",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "create-version": "npx package-version-info -o src/app/version.ts",
    "postinstall": "yarn create-version",
    "prepare": "husky",
    "i18n:extract-regex": "ngx-i18n-extract-regex-cli extract --library ngx-translate",
    "i18n:extract": "ngx-translate-extract --input ./src --output ./src/assets/i18n/*.json --clean --sort --format namespaced-json --marker _ --format-indentation '  ' --string-as-default-value '███'",
    "fix-vulnerabilities": "npx yarn-audit-fix && npx browserslist --update-db"
  },
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/cdk": "^21.1.3",
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/material": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/platform-browser-dynamic": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@gilsdav/ngx-translate-router": "^7.2.1",
    "@gilsdav/ngx-translate-router-http-loader": "^2.0.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "lodash-es": "^4.17.23",
    "ngx-app-version": "^2.2.0",
    "ngx-fixed-footer": "^4.1.0",
    "ngx-translate-version": "^5.0.1",
    "rxdb": "^15.39.0",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.3",
    "@biesbjerg/ngx-translate-extract-marker": "^1.0.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-angular": "^20.4.1",
    "@types/jasmine": "^6.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/uuid": "^11.0.0",
    "@vendure/ngx-translate-extract": "^10.1.3",
    "angular-eslint": "21.2.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jasmine-core": "^6.0.1",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.2.0",
    "lint-staged": "^16.2.7",
    "package-version-info": "^0.0.6",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=24 <26",
    "npm": "please-use-yarn"
  }
}
